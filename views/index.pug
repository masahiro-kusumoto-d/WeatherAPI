extends layout

block content
  h1= title
  p 都道府県の天気予報を表示 to #{title}

  a(href="/prefectures", class="btn btn-xs btn-warning") 全国の天気

  hr
  form(method='POST' action='/prefectures')
    input(type='text', name='name')
    input(type='text', name='symbol_url')
    input(type='text', name='condition')
    input(type='text', name='temp_min')
    input(type='text', name='temp_max')
    input(type='text', name='icon_url')
    input(type='submit', value='submit')
